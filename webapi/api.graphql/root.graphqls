type Subscription {
    time: Int
}

type ServiceModel {
    whenProvided: String
    forWhatCustomer: String
}

input ServiceEntry {
    whenProvided: String
    forWhatCustomer: ID
}

input ServicesFilter {
    whenProvided: String
    forWhatCustomer: String
}

# The Root Query for the application
type Query {
    getServices(filter: ServicesFilter): [ServiceModel]!
}
 
# The Root Mutation for the application
type Mutation {
    addService(entry: ServiceEntry) : ServiceModel!
}