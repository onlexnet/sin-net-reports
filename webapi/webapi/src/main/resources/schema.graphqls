type Book {
    id: ID!
    title: String!
    pagesCount: Int
    author: Author
}
 
type Author {
    id: ID!
    name: String!
    books: [Book]!
}

type Subscription {
    time: Int
}

# The Root Query for the application
type Query {
    getBooks: [Book]!
    getBook(id: ID!): Book
}
 
# The Root Mutation for the application
type Mutation {
    addBook(title: String!, authorId: String!) : Book!
}