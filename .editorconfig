# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.java]
indent_style = space
indent_size = 2

[*.puml]
indent_style = space
indent_size = 2

[*.{xml,xsd}]
max_line_length = off
end_of_line = lf
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
