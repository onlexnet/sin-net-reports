// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"isBackground": true,
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": "\\b\\B",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^.*Scanning for projects...",
						"endsPattern": "(^.*Quarkus .* started in .*\\.)|(^.* ERROR .* Failed to start)"
					}
				}
			],
			"group": "build",
			"label": "quarkus:dev (host)",
			"command": "mvn quarkus:dev -pl host -Ddebug=11012"
		},
		{
			"appId": "webapi",
			"appPort": 11010,
			"grpcPort": 50001,
			"httpPort": 3500,
			"label": "daprd-debug",
			"componentsPath": "../../.components",
			"type": "dapr",
			"dependsOn": "quarkus:dev (host)"
		},
		{
			"appId": "webapi",
			"label": "daprd-down",
			"type": "daprd-down"
		}
	]
}