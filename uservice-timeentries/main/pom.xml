<project>
  <modelVersion>4.0.0</modelVersion>

  <packaging>pom</packaging>
  <groupId>net.siudek</groupId>
  <artifactId>aggregation</artifactId>
  <version>${revision}</version>

  <modules>
    <module>base-pom</module>
    <module>grpc-common</module>
    <module>grpc-parent</module>
    <module>grpc-server</module>
    <module>domain-api</module>
    <module>domain-core</module>
    <module>web-security</module>
    <module>web-server</module>
    <module>web-graphql</module>
    <module>host</module>
    <!--
      report-aggregate should be the last one on the listy of modules so that
      it's aggregated coverage is not overritten by individual code coverage
      generated by other modules.
    -->
    <module>report-aggregate</module>
  </modules>

  <properties>
    <!-- sonar properties -> https://docs.sonarqube.org/latest/analysis/analysis-parameters/ -->
    <sonar.organization>on-lex-net</sonar.organization>
    <sonar.projectKey>sin-net-reports-timeentries</sonar.projectKey>
    <sonar.projectName>SinNet Reports TimeEntries</sonar.projectName>
    <sonar.host.url>https://sonarcloud.io</sonar.host.url>
    <!-- Environment variable is already defined in CIDD as SONAR_TOKEN -->
    <sonar.login>${env.SONAR_TOKEN}</sonar.login>

    <aggregate.report.dir>report-aggregate/target/site/jacoco-aggregate/jacoco.xml</aggregate.report.dir>

    <!-- disable encoding warning http://maven.apache.org/general.html#encoding-warning -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>


  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>flatten-maven-plugin</artifactId>
        <version>1.3.0</version>
        <configuration>
          <updatePomFile>true</updatePomFile>
          <flattenMode>resolveCiFriendliesOnly</flattenMode>
        </configuration>
        <executions>
          <execution>
            <id>flatten</id>
            <phase>process-resources</phase>
            <goals>
              <goal>flatten</goal>
            </goals>
          </execution>
          <execution>
            <id>flatten.clean</id>
            <phase>clean</phase>
            <goals>
              <goal>clean</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

</project>
