{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"isBackground": true,
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": "\\b\\B",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^.*Scanning for projects...",
						"endsPattern": "(^.*Started Program in .*\\.)"
					}
				}
			],
			"group": "build",
			"label": "run-host",
			"command": "SPRING_PROFILES_ACTIVE=dev APP_DB_HOST=localhost DATABASE_NAME=devlocaldb mvn spring-boot:run -pl host -Dspring-boot.run.jvmArguments='-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=11029'"
		},
		{
			"appId": "activities",
			"appPort": 11021,
			"appProtocol": "grpc",
			"label": "dapr-debug",
			"componentsPath": "../../.components",
			"type": "dapr",
			"dependsOn": "run-host"
		},
		{
			"appId": "activities",
			"label": "dapr-down",
			"type": "daprd-down"
		}
	]
}