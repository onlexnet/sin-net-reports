    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\src\\manage.py",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true
        },
        {
            "name": "Python: Django Tests",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}\\src",
            "program": "${workspaceFolder}\\src\\manage.py",
            "args": [
                "test"
            ]
        },
    ]
}